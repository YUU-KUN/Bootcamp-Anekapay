<h3>
    {{!-- <a class="btn btn-secondary" href="/buku"><i class="fa fa-plus"></i> Create New</a>  --}}
    Keranjang User
</h3>
<br>
{{email}}
<table class="table table-striped">
    <thead>
        <tr>
            <th>Id Buku</th>
            <th>Nama Buku</th>
            <th>Harga</th>
            <th>Jumlah</th>
            <th>Total</th>
        </tr>
    </thead>
    <tbody>
        {{#each keranjang}}
        <tr>
            <td>{{this.id_buku}}</td>
            <td>{{this.nama}}</td>
            <td>{{this.harga}}</td>
            <td>{{this.jumlah}}</td>
            <td>{{this.subtotal}}</td>
            <td>
                <a href="/editKeranjang/{{this.id_buku}}"><i class="fa fa-pencil fa-lg" aria-hidden="true"></i></a>
                <a href="/keranjang/hapus/{{this.id_buku}}" onclick="return confirm('Are you sure to delete this record ?');"><i class="fa fa-trash fa-lg" aria-hidden="true"></i></a>
            </td>
        </tr>
        {{/each}}
    </tbody>
</table>

<h3>Total: {{this.total}}</h3>
